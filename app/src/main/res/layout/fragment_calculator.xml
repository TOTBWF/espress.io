<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:androidPlot="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".Views.CalculatorFragment">
    <TableLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TableRow
            android:id="@+id/row_dose"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/label_dose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/field_dose"
                android:textSize="@dimen/text_size_calc"
                android:gravity="start"
                android:layout_weight="1" />
           <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <EditText
                   android:id="@+id/edit_dose"
                   android:labelFor="@id/edit_dose"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/text_size_calc"
                   android:hint="@string/field_zero_hint"
                   android:inputType="numberDecimal"
                   android:gravity="end"
                   android:layout_toStartOf="@+id/calc_dose_unit"
                   android:layout_alignParentStart="true"/>
               <TextView
                   android:id="@+id/calc_dose_unit"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="end"
                   android:textSize="@dimen/text_size_calc"
                   android:text="@string/unit_grams"
                   android:layout_centerVertical="true"
                   android:layout_alignParentEnd="true" />
           </RelativeLayout>
        </TableRow>
        <TableRow
            android:id="@+id/row_output"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/label_output"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/field_output"
                android:textSize="@dimen/text_size_calc"
                android:gravity="start"
                android:layout_weight="1" />
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1" >
                <EditText
                    android:id="@+id/edit_output"
                    android:labelFor="@id/edit_output"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_calc"
                    android:hint="@string/field_zero_hint"
                    android:inputType="numberDecimal"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/calc_output_unit"
                    android:gravity="end"/>
                <TextView
                    android:id="@+id/calc_output_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textSize="@dimen/text_size_calc"
                    android:text="@string/unit_grams"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
        </TableRow>
        <TableRow
            android:id="@+id/row_brix"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/label_brix"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/field_brix"
                android:textSize="@dimen/text_size_calc"
                android:gravity="start"
                android:layout_weight="1" />
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1" >
                <EditText
                    android:id="@+id/edit_brix"
                    android:labelFor="@id/edit_brix"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_calc"
                    android:hint="@string/field_zero_hint"
                    android:inputType="numberDecimal"
                    android:gravity="end"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/calc_brix_unit"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/calc_brix_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textSize="@dimen/text_size_calc"
                    android:text="@string/unit_percent"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
        </TableRow>
        <TableRow
            android:id="@+id/row_tds"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/label_tds"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/field_tds"
                android:textSize="@dimen/text_size_calc"
                android:gravity="start"
                android:layout_weight="1"/>
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1" >
                <EditText
                    android:id="@+id/edit_tds"
                    android:labelFor="@id/edit_tds"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_calc"
                    android:hint="@string/field_zero_hint"
                    android:inputType="none"
                    android:editable="false"
                    android:gravity="end"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/calc_tds_unit"/>
                <TextView
                    android:id="@+id/calc_tds_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textSize="@dimen/text_size_calc"
                    android:text="@string/unit_percent"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
        </TableRow>
        <TableRow
            android:id="@+id/row_yield"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/label_yield"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/field_yield"
                android:textSize="@dimen/text_size_calc"
                android:gravity="start"
                android:layout_weight="1"/>
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1" >
                <EditText
                    android:id="@+id/edit_yield"
                    android:labelFor="@id/edit_yield"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_calc"
                    android:hint="@string/field_zero_hint"
                    android:inputType="none"
                    android:editable="false"
                    android:gravity="end"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/calc_yield_unit"/>
                <TextView
                    android:id="@+id/calc_yield_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textSize="@dimen/text_size_calc"
                    android:text="@string/unit_percent"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/row_bean"
            android:layout_weight="1"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/field_bean"
                android:id="@+id/label_bean"
                android:gravity="start"
                android:textSize="@dimen/text_size_calc"
                android:layout_weight="1"/>
            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/bean_spinner"
                android:textSize="@dimen/text_size_calc"
                android:gravity="end"
                android:layout_weight="1"/>
        </TableRow>
    </TableLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="1">
        <com.androidplot.xy.XYPlot
            android:id="@+id/graph_calc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button_calc_save"
            androidPlot.domainLabel="Yield (%)"
            androidPlot.rangeLabel="TDS (%)"
            androidplot.backgroundPaint.color="@color/background"
            androidPlot.borderPaint.color="@color/background"
            androidPlot.graphWidget.paddingTop="@dimen/graph_top_padding"
            androidPlot.graphWidget.paddingRight="@dimen/graph_right_padding"
            androidPlot.graphWidget.paddingBottom="@dimen/graph_bottom_padding"
            androidPlot.graphWidget.backgroundPaint.color="@color/background"
            androidPlot.graphWidget.gridBackgroundPaint.color="@color/background"
            androidPlot.graphWidget.domainGridLinePaint.color="@color/light_accent"
            androidPlot.graphWidget.rangeGridLinePaint.color="@color/light_accent"
            androidPlot.graphWidget.rangeOriginLinePaint.color="@color/light_accent"
            androidPlot.graphWidget.domainOriginLinePaint.color="@color/light_accent"
            androidPlot.graphWidget.rangeLabelPaint.color="@color/light_accent"
            androidPlot.graphWidget.domainLabelPaint.color="@color/light_accent"
            androidPlot.graphWidget.rangeLabelPaint.textSize="@dimen/graph_label_text_size"
            androidPlot.graphWidget.domainLabelPaint.textSize="@dimen/graph_label_text_size"
            androidPlot.domainLabelWidget.labelPaint.color="@color/light_accent"
            androidPlot.rangeLabelWidget.labelPaint.color="@color/light_accent"
            androidPlot.domainLabelWidget.labelPaint.textSize="@dimen/graph_label_text_size"
            androidPlot.rangeLabelWidget.labelPaint.textSize="@dimen/graph_label_text_size"
            androidPlot.ticksPerRangeLabel="4"
            androidPlot.ticksPerDomainLabel="4"
            androidPlot.legendWidget.visible="false"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_save"
            android:id="@+id/button_calc_save"
            android:theme="@style/ToolbarTheme"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:enabled="false" />
    </RelativeLayout>
</LinearLayout>
