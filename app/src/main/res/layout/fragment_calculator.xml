<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:androidPlot="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CalculatorFragment">
    <TableLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:stretchColumns="1">
        <TableRow
            android:id="@+id/row_dose"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:orientation="horizontal">
           <TextView
                android:id="@+id/label_dose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/field_dose"
                android:textSize="@dimen/text_size_calc"
                android:gravity="start"
                android:layout_weight="1" />
           <EditText
                android:id="@+id/edit_dose"
                android:labelFor="@id/edit_dose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_calc"
                android:hint="@string/field_zero_hint"
                android:inputType="numberDecimal"
                android:layout_weight="1"
                android:gravity="end" />
        </TableRow>
        <TableRow
            android:id="@+id/row_output"
            android:layout_width="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/label_output"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/field_output"
                android:textSize="@dimen/text_size_calc"
                android:gravity="start"
                android:layout_weight="1" />
            <EditText
                android:id="@+id/edit_output"
                android:labelFor="@id/edit_output"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_calc"
                android:hint="@string/field_zero_hint"
                android:inputType="numberDecimal"
                android:gravity="end"
                android:layout_weight="1" />
        </TableRow>
        <TableRow
            android:id="@+id/row_brix"
            android:layout_width="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/label_brix"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/field_brix"
                android:textSize="@dimen/text_size_calc"
                android:gravity="start"
                android:layout_weight="1" />
            <EditText
                android:id="@+id/edit_brix"
                android:labelFor="@id/edit_brix"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_calc"
                android:hint="@string/field_zero_hint"
                android:inputType="numberDecimal"
                android:gravity="end"
                android:layout_weight="1" />
        </TableRow>
        <TableRow
            android:id="@+id/row_tds"
            android:layout_width="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/label_tds"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/field_tds"
                android:textSize="@dimen/text_size_calc"
                android:gravity="start"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/edit_tds"
                android:labelFor="@id/edit_tds"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_calc"
                android:hint="@string/field_zero_hint"
                android:inputType="none"
                android:editable="false"
                android:gravity="end"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow
            android:id="@+id/row_yield"
            android:layout_width="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/label_yield"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/field_yield"
                android:textSize="@dimen/text_size_calc"
                android:gravity="start"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/edit_yield"
                android:labelFor="@id/edit_yield"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_calc"
                android:hint="@string/field_zero_hint"
                android:inputType="none"
                android:editable="false"
                android:gravity="end"
                android:layout_weight="1"/>
        </TableRow>
    </TableLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="1">
        <com.androidplot.xy.XYPlot
            android:id="@+id/graph_calc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button_calc_save"
            androidPlot.domainLabel="Yield (%)"
            androidPlot.rangeLabel="TDS (%)"
            androidplot.backgroundPaint.color="@color/background"
            androidPlot.borderPaint.color="@color/background"
            androidPlot.marginTop="@dimen/graph_padding"
            androidPlot.marginRight="@dimen/graph_padding"
            androidPlot.graphWidget.backgroundPaint.color="@color/background"
            androidPlot.graphWidget.gridBackgroundPaint.color="@color/background"
            androidPlot.graphWidget.domainGridLinePaint.color="@color/primary_text"
            androidPlot.graphWidget.rangeGridLinePaint.color="@color/primary_text"
            androidPlot.domainLabelWidget.labelPaint.color="@color/primary_text"
            androidPlot.rangeLabelWidget.labelPaint.color="@color/primary_text"
            androidPlot.legendWidget.visible="false"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_save"
            android:id="@+id/button_calc_save"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</LinearLayout>
