<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>
    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
    </style>
    <style name="ToolbarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorButtonNormal">@color/primary</item>
    </style>
    <style name="DeleteButton" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimary">@color/delete_button</item>
        <item name="android:colorButtonNormal">@color/delete_button</item>
        <item name="android:colorAccent">@color/delete_button_text</item>
    </style>
</resources>